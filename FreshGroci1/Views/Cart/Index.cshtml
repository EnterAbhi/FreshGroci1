@model IEnumerable<FreshGroci1.Models.CartModel>

@{
    Layout = "_Layout";
}
<h1>Cart</h1>
<div class="container">
    <table class="table table-striped border">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { 
             <tr>
                <td>@Html.DisplayFor(m => item.Id)</td>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.price) &#8377;</td>
                <td><a href='/product/getproductbyid/@Html.DisplayFor(m =>item.ProductId)'><img src="@Html.DisplayFor(m => item.Image)" height="50px" width="50px" /></a></td>
                <td><a href='/Cart/DeleteById/@Html.DisplayFor(m =>item.ProductId)'><i class="fa fa-close"></i></a></td>   
            </tr>
            }
        </tbody>  
    </table>
</div>
